generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())

  wallet       Wallet?
  audits       AuditLog[]
  transactions Transaction[]
}

model Wallet {
  id        String   @id @default(uuid())
  userId    String   @unique
  balance   Int      @default(0)   // changed to Int for SQLite safety
  isFrozen  Boolean  @default(false)
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model Transaction {
  id        String   @id @default(uuid())
  userId    String
  type      String
  amount    Int
  status    String
  reference String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  ipAddress String?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])
}
